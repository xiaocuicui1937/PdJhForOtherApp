<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.sfsure.JHDetailActivity">

    <View
        android:visibility="gone"
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#536DFE"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="gone"

        android:id="@+id/tv_jh_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="2018年9月10日 周二 15:31:21"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_jh_detail_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider_top" />



    <TextView
        android:visibility="gone"
        android:id="@+id/tv_jh_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_jh_detail_logo"
        app:layout_constraintTop_toTopOf="@+id/iv_jh_detail_logo" />


    <!--<TextView-->
    <!--android:id="@+id/tv_jh_detail_content"-->
    <!--android:layout_margin="40dp"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="300dp"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/divider_top"/>-->

    <!--叫号详情-->
    <yyydjk.com.library.CouponView
        android:id="@+id/cv_jhdetail_detail"
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:padding="10dp"
        app:cv_dash_line_color="@android:color/white"
        app:cv_dash_line_gap="5dp"
        app:cv_dash_line_height="0.8dp"
        app:cv_dash_line_length="10dp"
        app:cv_dash_line_margin_bottom="5dp"
        app:cv_dash_line_margin_left="5dp"
        app:cv_dash_line_margin_right="5dp"
        app:cv_dash_line_margin_top="8dp"
        app:cv_is_dash_line_bottom="true"
        app:cv_is_dash_line_left="true"
        app:cv_is_dash_line_right="true"
        app:cv_is_dash_line_top="false"
        app:cv_is_semicircle_bottom="true"
        app:cv_is_semicircle_left="false"
        app:cv_is_semicircle_right="false"
        app:cv_is_semicircle_top="true"
        app:cv_semicircle_color="@android:color/white"
        app:cv_semicircle_gap="4dp"
        app:cv_semicircle_radius="4dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_top">

        <RelativeLayout
            android:id="@+id/rl_jh_detail_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/sp_white">

            <TextView
                android:id="@+id/tv_jh_detail_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:text="请按照指示刷身份证取号"
                android:textSize="26sp" />


            <!--倒计时-->
            <TextView
                android:id="@+id/tv_jh_detail_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_10"
                android:text="倒计时"
                android:gravity="center"
                android:textSize="26sp"
                android:textColor="@color/colorAccent"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/giv_jh_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_jh_detail_tip"
                android:src="@drawable/gif_sfrz" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_zs_arrow"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dp_40"/>
        </RelativeLayout>
    </yyydjk.com.library.CouponView>

    <ImageView
        android:id="@+id/iv_jh_detail_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="@+id/cv_jhdetail_detail"
        app:layout_constraintTop_toTopOf="@+id/cv_jhdetail_detail" />
</android.support.constraint.ConstraintLayout>